<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/list_marginTop"
    >

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_padding"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="80dp"
            android:layout_height="125dp"
            android:src="@drawable/poster_venom"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_list"
            android:layout_toEndOf="@+id/img_list"
            android:layout_marginLeft="@dimen/list_margin"
            android:layout_marginStart="@dimen/list_margin"
            android:layout_marginRight="@dimen/list_margin"
            android:layout_marginEnd="@dimen/list_margin">

            <TextView
                android:id="@+id/tv_title_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_sample"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_aired_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/aired_sample"
                android:textStyle="normal"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_genre_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/genre_sample"
                android:textStyle="normal"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>